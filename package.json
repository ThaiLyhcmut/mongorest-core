{
  "name": "@mongorest/core",
  "version": "1.0.0",
  "description": "A flexible REST API framework supporting multiple databases with built-in RBAC, relationships, and schema validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "rest",
    "api",
    "mongodb",
    "postgresql",
    "mysql",
    "elasticsearch",
    "database",
    "adapter",
    "rbac",
    "schema",
    "validation",
    "relationships",
    "orm",
    "query-builder"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thailyHcmut/mongorest-core.git"
  },
  "bugs": {
    "url": "https://github.com/thailyHcmut/mongorest-core/issues"
  },
  "homepage": "https://github.com/thailyHcmut/mongorest-core#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chokidar": "^4.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "elasticsearch": "^16.7.3",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@types/elasticsearch": "^5.0.43",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "fastify": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    }
  }
}
